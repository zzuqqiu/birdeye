@if (Request.IsAuthenticated)
{
    <text>欢迎 <strong id="welcomeUserName"></strong>!
    @Html.ActionLink("注销", "LogOff", "Account") | @Html.ActionLink("个人中心", "BasicData", "Account")</text>
}
else
{
    @:@Html.ActionLink("注册", "Register", "Account") | @Html.ActionLink("登录", "LogOn", "Account")
}
<script type="text/javascript">
    $().ready(function () {
        $.ajax(
        {
                type: "post",
                url: "/Account/GetWelcomeUserName",
                dataType:"json",
                success: function (data, status) {
                    if(data!=null && typeof(data)=="string"){
                        $("#welcomeUserName")[0].innerText=data;
                    }
                },
                error: function (data) {
                    alert("bad"); 
                }
         });
    });
</script>
